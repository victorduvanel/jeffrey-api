{{#paper-card as |card|}}
  {{#paper-toolbar}}
    {{#paper-toolbar-tools}}
      <h2>Mon compte</h2>
    {{/paper-toolbar-tools}}
  {{/paper-toolbar}}

  {{#paper-form onSubmit=(action "saveInfo") as |form|}}
    {{#card.content class="layout-column layout-align-space-between"}}
      <div class="layout-row">
        <div class="layout-column flex-50">
          {{form.input label="Pr√©nom" value=firstName onChange=(action (mut firstName)) required=true}}
        </div>
        <div class="layout-column flex-50">
          {{form.input label="Nom" value=lastName onChange=(action (mut lastName))}}
        </div>
      </div>
      <div class="layout-row">
        <div class="layout-column flex-100">
          {{form.input label="Adresse email" value=email type="email" onChange=(action (mut email))}}
        </div>
      </div>
    {{/card.content}}

    {{#card.actions}}
      {{#form.submit-button disabled=submitButtonDisabled raised=true primary=true }}
        Enregistrer
      {{/form.submit-button}}
    {{/card.actions}}
  {{/paper-form}}
{{/paper-card}}
