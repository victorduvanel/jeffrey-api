<div class="layout-row flex-grow ">
  <div local-class="conversations-list" class="flex-30 scroll-y">
    {{#link-to "dashboard.conversations.index" local-class="new-message-button"}}
      Nouveau message
    {{/link-to}}

    {{#each conversations as |conversation|}}
      {{#link-to "dashboard.conversations.conversation" conversation }}
        {{conversation.name}}
        {{phone-number number=conversation.to}}
      {{/link-to}}
    {{/each}}

    {{#paper-list}}
      {{#each conversations as |conversation|}}
        {{#paper-item onClick=(action (transition-to "dashboard.conversations.conversation" conversation)) as |controls|}}
          {{conversation.name}}
          {{phone-number number=conversation.to}}
        {{/paper-item}}
      {{/each}}
    {{/paper-list}}
  </div>
  <div class="flex-70 layout-column flex-grow">
    <div class="layout-column flex-grow">
      {{outlet}}
    </div>
  </div>
</div>
